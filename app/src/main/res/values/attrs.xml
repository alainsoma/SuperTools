<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleButton">
        <attr name="cb_color" format="color" />
        <attr name="cb_pressed_ring_width" format="dimension" />
    </declare-styleable>
	
	<declare-styleable name="SliderRuler">
       	<attr name="big_unit" format="reference"></attr>
       	<attr name="small_unit" format="reference"></attr>
       	<attr name="mask" format="reference"></attr>
       	<attr name="between_count" format="integer"></attr>
		<attr name="total_count" format="integer"></attr>		
		<attr name="unit_image_width" format="reference"></attr>
		<attr name="appbackground" format="reference"></attr>
		<attr name="text_size" format="integer"></attr>
		<attr name="default_value" format="integer"></attr>
	</declare-styleable>
	
	<declare-styleable name="RulerView">
        <attr name="unit" format="enum">
            <enum name="inch" value="0"/>
            <enum name="cm" value="1"/>
        </attr>

        <attr name="guideScaleTextSize" format="dimension" />
        <attr name="graduatedScaleWidth" format="dimension" />
        <attr name="graduatedScaleBaseLength" format="dimension" />
        <attr name="scaleColor" format="color" />

        <attr name="pointerRadius" format="dimension" />
        <attr name="pointerStrokeWidth" format="dimension" />
        <attr name="pointerColor" format="color" />

        <attr name="labelTextSize" format="dimension" />
        <attr name="defaultLabelText" format="string" />
        <attr name="labelColor" format="color" />

        <attr name="backgroundColor" format="color" />
    </declare-styleable>
</resources>